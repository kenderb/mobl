<h1>All articles</h1>
<% @articles.each do |article|%>
  <h2 class='article-title'>This is the article <%= article.id%></h2>
  <div class='article-container'>
    <p class = 'article-item'>
      <strong>Title</strong> <br>
      <%=article.title%>
    </p>
    <p class = 'article-item'>
      <strong>Detail</strong> <br>
      <%=article.body%>
    </p>
    <div class = 'article-item'>
      <strong>Actions</strong> <br>
      <%=link_to 'Show ', article_path(article)%>
      <%=link_to 'Edit ', edit_article_path(article)%>
      <%=link_to 'Delete ', article_path(article), method: :delete, data: {confirm: 'Are you sure that you want to delete thsi article?'}%>
    </div>
  </div>
<%end%>
<%=link_to 'Create a new article ', new_article_path%>