<h1>Create a new article</h1>
<%= form_with scope: :article, url:articles_path, local: true do |form| %>
  <p>
    <%=form.label :title%> <br />
    <%=form.text_field :title%>
  </p>

  <p>
    <%=form.label :body%>  <br />
    <%=form.text_area :body%>
  </p>
  <p>
    <%= form.submit "Create article"%>
  </p>
<% end %>